<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ieitlabs.peon.FragmentDashboard">

    <!-- TODO: Update blank fragment layout -->
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_marginBottom="30dp"
               android:layout_marginTop="10dp"
               android:text="Number of groups:"
               android:textSize="35dp" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:text="Recently created:"
           android:layout_marginTop="45dp"
           android:layout_marginBottom="0dp"
           android:textSize="35dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Group 1"
               android:textSize="20dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Group 2"
               android:textSize="20dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Group 3"
               android:textSize="20dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Number of users:"
               android:layout_marginTop="10dp"
               android:layout_marginBottom="30dp"
               android:textSize="35dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="Recently joined:"
               android:layout_marginTop="45dp"
               android:layout_marginBottom="0dp"
               android:textSize="35dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="User 1"
               android:textSize="20dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="User 2"
               android:textSize="20dp"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:text="User 3"
               android:textSize="20dp"/>
       </LinearLayout>
   </ScrollView>

</FrameLayout>
